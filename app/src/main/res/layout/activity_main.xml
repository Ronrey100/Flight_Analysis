<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/subject_id_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Subject ID:"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/subject_id_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subject_id_txt"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/blank_text_0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subject_id_value"
                android:text=" "
                android:textSize="20sp" />
            <TextView
                android:id="@+id/task_id_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blank_text_0"
                android:text="Task ID:"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/task_id_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_id_text"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/blank_text_2_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_id_value"
                android:text=" "
                android:textSize="20sp" />
            <TextView
                android:id="@+id/task_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blank_text_2_2"
                android:text="Task Name:"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/task_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_text"
                android:textSize="15sp" />
            <Button
                android:id="@+id/next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/task_value"
                android:layout_centerHorizontal="true"
                android:text="Next"
                android:textSize="20sp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
