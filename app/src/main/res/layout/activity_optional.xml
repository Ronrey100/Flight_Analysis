<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/next_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Please press here to skip Optional Information."
                android:clickable="true"
                android:background="@drawable/selectors"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/blank_text_0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/next_text"
                android:text=" "
                android:textSize="20sp" />
            <TextView
                android:id="@+id/first_name_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="First Name:"
                android:textSize="20sp"
                android:layout_below="@+id/blank_text_0"/>
            <EditText
                android:id="@+id/first_name_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_name_txt"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/blank_text_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_name_value"
                android:text=" "
                android:textSize="20sp" />
            <TextView
                android:id="@+id/middle_name_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blank_text_1"
                android:text="Middle Name:"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/middle_name_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/middle_name_text"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/blank_text_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/middle_name_value"
                android:text=" "
                android:textSize="20sp" />
            <TextView
                android:id="@+id/last_name_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blank_text_2"
                android:text="Last Name:"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/last_name_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/last_name_text"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/blank_text_2_0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/last_name_value"
                android:text=" "
                android:textSize="20sp" />
            <TextView
                android:id="@+id/org_name_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blank_text_2_0"
                android:text="Organisation Name:"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/org_name_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/org_name_text"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/blank_text_2_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/org_name_value"
                android:text=" "
                android:textSize="20sp" />
            <TextView
                android:id="@+id/task_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blank_text_2_1"
                android:text="Task Name:"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/task_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_text"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/blank_text_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_value"
                android:text=" "
                android:textSize="20sp" />
            <TextView
                android:id="@+id/age_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blank_text_3"
                android:text="Age (Optional):"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/age_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/age_text"
                android:numeric="integer"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/blank_text_4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/age_value"
                android:text=" "
                android:textSize="20sp" />
            <TextView
                android:id="@+id/gender_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blank_text_4"
                android:text="Gender (Optional):"
                android:textSize="20sp" />
            <RadioGroup
                android:id="@+id/radioGenderGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gender_text">
                <RadioButton
                    android:id="@+id/radio_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/male_ch"
                    android:minWidth="20sp"
                    android:minHeight="20sp"/>

                <RadioButton
                    android:id="@+id/radio_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/female_ch"
                    android:minWidth="20sp"
                    android:minHeight="20sp"/>
            </RadioGroup>
            <TextView
                android:id="@+id/blank_text_5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioGenderGroup"
                android:text=" "
                android:textSize="20sp" />
            <TextView
                android:id="@+id/height_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blank_text_5"
                android:text="Height (cms):"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/height_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/height_text"
                android:numeric="integer"
                android:hint="Optional"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/blank_text_6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/height_value"
                android:text=" "
                android:textSize="20sp" />
            <TextView
                android:id="@+id/weight_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blank_text_6"
                android:text="Weight (kg):"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/weight_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weight_text"
                android:numeric="integer"
                android:hint="Optional"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/blank_text_7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weight_value"
                android:text=" "
                android:textSize="20sp" />
            <TextView
                android:id="@+id/flying_exp_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blank_text_7"
                android:text="Task Experience (If Any):"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/flying_exp_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/flying_exp_text"
                android:numeric="integer"
                android:textSize="15sp"
                android:hint="Please enter in total hours."/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Prev"
                android:id="@+id/prev_button"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/flying_exp_value"
                android:layout_alignParentLeft="true"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Next"
                android:id="@+id/next_button"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/flying_exp_value"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
